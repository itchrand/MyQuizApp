<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.seahawk.myquizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answerquestions"
            style="@style/SubHeaderTextStyle"
            android:text="@string/answerQuestions"/>

        <TextView
            android:id="@+id/question01"
            style="@style/BodyTextStyle"
            android:text="@string/question01"/>

        <EditText
            android:id="@+id/answer01"
            style="@style/BodyTextStyle"
            android:hint="@string/hintEnterText"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/question02"
            style="@style/BodyTextStyle"
            android:text="@string/question02"/>

        <RadioGroup
            android:id="@+id/answer02_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/answer02_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer02_1"
                android:theme="@style/RadioButtons"/>

            <RadioButton
                android:id="@+id/answer02_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer02_2"
                android:theme="@style/RadioButtons"/>

            <RadioButton
                android:id="@+id/answer02_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer02_3"
                android:theme="@style/RadioButtons"/>

            <RadioButton
                android:id="@+id/answer02_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer02_4"
                android:theme="@style/RadioButtons"/>

            <RadioButton
                android:id="@+id/answer02_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer02_5"
                android:theme="@style/RadioButtons"/>
        </RadioGroup>

        <TextView
            android:id="@+id/question03"
            style="@style/BodyTextStyle"
            android:text="@string/question03"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150sp"
                android:layout_height="120sp"
                android:padding="8dp"
                android:src="@drawable/question03_picture"
                android:scaleType="centerInside"/>

            <EditText
                android:id="@+id/answer03"
                style="@style/BodyTextStyle"
                android:hint="@string/hintEnterText"
                android:inputType="textCapWords"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="submitAnswers"
            android:text="@string/submitAnswers"
            android:theme="@style/Buttons"/>
    </LinearLayout>
</ScrollView>
